{
  "name": "todo-list-mcp",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "bin": {
    "todo-list-mcp": "./dist/src/index.js"
  },
  "type": "module",
  "scripts": {
    "prebuild": "[ -d node_modules ] || npm install",
    "build": "tsc",
    "clean": "rm -rf dist",
    "reinstall": "rm -rf node_modules && npm install",
    "rebuild": "npm run reinstall && npm run build",
    "start": "node dist/src/index.js",
    "dev": "npm run build && npm start",
    "test-client": "npm run build && node dist/scripts/test_client.js",
    "test:integration": "npm run build && node dist/tests/run_tests.js",
    "test:all": "npm run test:integration && npm run test-client",
    "inspector": "npx @modelcontextprotocol/inspector node dist/src/index.js"
  },
  "keywords": [
    "mcp",
    "todo",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "description": "Todo list MCP server",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "better-sqlite3": "^9.4.1",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.5.1",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.28",
    "@types/uuid": "^9.0.8"
  }
}
